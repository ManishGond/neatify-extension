{
  "name": "neatify",
  "displayName": "Neatify",
  "description": "Clean, refactor, and optimize your JavaScript/TypeScript code in real-time ðŸš€",
  "version": "0.0.5",
  "publisher": "Manish N Gond",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Formatters",
    "Linters",
    "Other"
  ],
  "keywords": [
    "javascript",
    "typescript",
    "refactor",
    "optimize",
    "clean code",
    "linting"
  ],
  "icon": "images/icon.png",
  "galleryBanner": {
    "color": "#4F46E5",
    "theme": "dark"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/neatify-extension"
  },
  "homepage": "https://github.com/your-username/neatify-extension",
  "bugs": {
    "url": "https://github.com/your-username/neatify-extension/issues"
  },
  "contributes": {
    "commands": [
      {
        "command": "neatify.showFileSummary",
        "title": "Neatify: File Summary"
      },
      {
        "command": "neatify.removeUnusedVariables",
        "title": "Neatify: Remove Unused Variables"
      },
      {
        "command": "neatify.refactorToCamelCase",
        "title": "Neatify: Refactor to camelCase"
      },
      {
        "command": "neatify.removeUnusedImports",
        "title": "Neatify: Remove Unused Imports"
      },
      {
        "command": "neatify.convertVarToLet",
        "title": "Neatify: Convert var â†’ let/const"
      },
      {
        "command": "neatify.optimizeFile",
        "title": "Neatify: Optimize File"
      }
    ],
    "keybindings": [
      {
        "command": "neatify.showFileSummary",
        "key": "ctrl+alt+p",
        "when": "editorTextFocus"
      },
      {
        "command": "neatify.removeUnusedVariables",
        "key": "ctrl+alt+u",
        "when": "editorTextFocus"
      },
      {
        "command": "neatify.refactorToCamelCase",
        "key": "ctrl+alt+c",
        "when": "editorTextFocus"
      },
      {
        "command": "neatify.removeUnusedImports",
        "key": "ctrl+alt+i",
        "when": "editorTextFocus"
      },
      {
        "command": "neatify.convertVarToLet",
        "key": "ctrl+alt+v",
        "when": "editorTextFocus"
      },
      {
        "command": "neatify.optimizeFile",
        "key": "ctrl+alt+o",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p .",
    "watch": "tsc -watch -p .",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.103.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.32.0",
    "typescript": "^5.9.2"
  }
}

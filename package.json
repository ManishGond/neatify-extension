{
  "name": "neatify",
  "displayName": "Neatify",
  "description": "Clean, refactor, and optimize your JavaScript/TypeScript code in real-time ðŸš€",
  "publisher": "Manish N Gond",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Linters"
  ],
  "repository": {
    "type": "git",
    "url": ""
  },
  "main": "./dist/extension.js",
  "activationEvents": [
    "onCommand:neatify.showFileSummary",
    "onCommand:neatify.removeUnusedVariables",
    "onCommand:neatify.refactorToCamelCase",
    "onCommand:neatify.removeUnusedImports",
    "onCommand:neatify.convertVarToLet",
    "onCommand:neatify.optimizeFile",
    "onView:neatify.myView"
  ],
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "neatify.myView",
          "name": "Neatify",
          "icon": "images/icon.png"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "neatify.myView",
        "contents": "Welcome to Neatify! [Learn more](command:neatify.showFileSummary)"
      }
    ],
    "commands": [
      {
        "command": "neatify.showFileSummary",
        "title": "Neatify: File Summary"
      },
      {
        "command": "neatify.removeUnusedVariables",
        "title": "Neatify: Remove Unused Variables"
      },
      {
        "command": "neatify.refactorToCamelCase",
        "title": "Neatify: Refactor to camelCase"
      },
      {
        "command": "neatify.removeUnusedImports",
        "title": "Neatify: Remove Unused Imports"
      },
      {
        "command": "neatify.convertVarToLet",
        "title": "Neatify: Convert var â†’ let/const"
      },
      {
        "command": "neatify.optimizeFile",
        "title": "Neatify: Optimize Entire File"
      }
    ],
    "keybindings": [
      {
        "command": "neatify.showFileSummary",
        "key": "ctrl+alt+p",
        "when": "editorTextFocus"
      },
      {
        "command": "neatify.removeUnusedVariables",
        "key": "ctrl+alt+u",
        "when": "editorTextFocus"
      },
      {
        "command": "neatify.refactorToCamelCase",
        "key": "ctrl+alt+c",
        "when": "editorTextFocus"
      },
      {
        "command": "neatify.removeUnusedImports",
        "key": "ctrl+alt+i",
        "when": "editorTextFocus"
      },
      {
        "command": "neatify.convertVarToLet",
        "key": "ctrl+alt+v",
        "when": "editorTextFocus"
      },
      {
        "command": "neatify.optimizeFile",
        "key": "ctrl+alt+o",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.103.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "copy-webpack-plugin": "^13.0.1",
    "eslint": "^9.32.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.9.2",
    "webpack": "^5.101.0",
    "webpack-cli": "^6.0.1"
  }
}
